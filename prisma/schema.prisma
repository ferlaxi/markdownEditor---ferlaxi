generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nota {
  id Int @id @default(autoincrement())
  titulo String @default("sin_nombre.md")
  contenido String? @default("")
  createdAt DateTime @default(now())
}
